<Window x:Class="Shang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shang"
        mc:Ignorable="d"
        Title="Savify" Height="1080" Width="1920">
    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <Frame Source="Pages/Home.xaml"/>
            </TabItem>
            <TabItem Header="Contacts" >
                <Frame Source="Pages/Contacts.xaml"/>
            </TabItem>
            <TabItem Header="Settings" >
                <Frame Source="Pages/Settings.xaml"/>
            </TabItem>
            <TabItem Header="About" >
                <Frame Source="Pages/About.xaml"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
